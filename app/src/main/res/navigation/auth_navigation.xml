<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ymoataz.iti.android.recipe_app_android_iti_project.auth.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_recipeActivity"
            app:destination="@id/recipeActivity" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.ymoataz.iti.android.recipe_app_android_iti_project.auth.view.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_recipeActivity"
            app:destination="@id/recipeActivity" />
    </fragment>
    <activity
        android:id="@+id/recipeActivity"
        android:name="com.ymoataz.iti.android.recipe_app_android_iti_project.recipe.view.RecipeActivity"
        android:label="activity_recipe"
        tools:layout="@layout/activity_recipe" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ymoataz.iti.android.recipe_app_android_iti_project.auth.view.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splashFragment"/>
        <action
            android:id="@+id/action_splashFragment_to_recipeActivity"
            app:destination="@id/recipeActivity" />
    </fragment>
</navigation>