<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment"
    android:id="@+id/recipe_nav">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ymoataz.iti.android.recipe_app_android_iti_project.recipe.home.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.ymoataz.iti.android.recipe_app_android_iti_project.recipe.search.view.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.ymoataz.iti.android.recipe_app_android_iti_project.recipe.favourite.view.FavouritesFragment"
        android:label="Favourites"
        tools:layout="@layout/fragment_favourites" >
        <action
            android:id="@+id/action_favouritesFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.ymoataz.iti.android.recipe_app_android_iti_project.recipe.details.presentation.views.DetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="recipe"
            app:nullable="true"
            app:argType="com.ymoataz.iti.android.recipe_app_android_iti_project.database.Recipe" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.ymoataz.iti.android.recipe_app_android_iti_project.recipe.view.fragments.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <action
        android:id="@+id/action_global_aboutFragment"
        app:destination="@id/aboutFragment" />

</navigation>
